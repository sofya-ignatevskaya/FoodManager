<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/parent_of_product"
        android:layout_width="412dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#D9ABC6A2"
        android:gravity="top"

        />

    <TextView
        android:id="@+id/name_of_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/parent_of_product"
        android:layout_marginLeft="15dp"
        tools:text="Название продукта"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/weight_of_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/calories_of_product"
        android:layout_alignTop="@+id/parent_of_product"
        tools:text="100"
        android:textColor="#450101"/>

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/parent_of_product"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/weight_of_product"
        android:text="г"
        android:textColor="#450101"/>

    <TextView
        android:id="@+id/id_of_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/parent_of_product"
        android:hint="1"
        android:paddingStart="5dp"
        android:textSize="10sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/proteins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/parent_of_product"
        android:layout_alignParentStart="true"
        android:layout_marginStart="330dp"
        android:text="Белки"
        android:textColor="#450101"/>

    <TextView
        android:id="@+id/proteins_of_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/parent_of_product"
       android:layout_toRightOf="@+id/proteins"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textColor="#476100"
        tools:text="0" />

    <TextView
        android:id="@+id/fats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/parent_of_product"
        android:layout_alignParentStart="true"
        android:layout_marginStart="190dp"
        android:text="Жиры"
        android:textColor="#450101" />

    <TextView
        android:id="@+id/fats_of_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/parent_of_product"
      android:layout_toRightOf="@+id/fats"
        android:layout_marginLeft="10dp"
        android:textColor="#BF5C00"
        tools:text="0"
        />

    <TextView
        android:id="@+id/carbohydrates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/parent_of_product"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:textColor="#450101"
        android:text="Углеводы" />

    <TextView
        android:id="@+id/carbohydrates_of_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/parent_of_product"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/carbohydrates"
        android:textColor="#AD0000"
        tools:text="0" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/calories_of_product"
        android:text="ккал"
        android:textColor="#450101"/>

    <TextView
        android:id="@+id/calories_of_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/proteins"
        android:layout_marginTop="23dp"
        android:textColor="#450101"
        tools:text="0" />

</RelativeLayout>