<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BA781">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bgResult"
            style="@style/TextSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="60dp"
            android:paddingLeft="90dp"
            android:text="@string/kind_question"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/kindList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/bgResult"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            tools:listitem="@layout/list_for_kind_and_category"
            />
    </RelativeLayout>
</RelativeLayout>